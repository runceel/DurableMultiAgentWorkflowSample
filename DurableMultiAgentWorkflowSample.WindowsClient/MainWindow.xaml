<Window
    x:Class="DurableMultiAgentWorkflowSample.WindowsClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DurableMultiAgentWorkflowSample.WindowsClient"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DurableMultiAgentWorkflowSample.WindowsClient.ViewModels"
    Title="Durable Multi-Agent Workflow"
    Width="850"
    Height="500"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    Background="#f7f9fb"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  タイトル  -->
        <TextBlock
            Grid.Row="0"
            Margin="30,20,0,10"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#4F8EF7"
            Text="Durable Multi-Agent Workflow" />
        <!--  上部：入力欄と送信ボタン  -->
        <Border
            Grid.Row="0"
            Margin="20,60,20,10"
            Padding="20"
            Background="White"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    Opacity="0.12"
                    ShadowDepth="2" />
            </Border.Effect>
            <StackPanel HorizontalAlignment="Stretch">
                <TextBlock Margin="0,0,0,8">
                    <Run Text="Id: " />
                    <Run
                        FontWeight="Bold"
                        Foreground="Blue"
                        Text="{Binding Id}" />
                </TextBlock>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Name="InputTextBox"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Grid.Column="1"
                        MinWidth="75"
                        Margin="5"
                        Padding="5"
                        Command="{Binding StartWorkflowCommand}"
                        Content="送信" />
                    <Button
                        Grid.Column="2"
                        MinWidth="75"
                        Margin="5"
                        Padding="5"
                        Command="{Binding ReplyCommand}"
                        Content="入力送信" />
                </Grid>
            </StackPanel>
        </Border>
        <!--  下部：ListBox  -->
        <Border
            Grid.Row="1"
            Margin="20,0,20,20"
            Padding="16"
            Background="#f0f4fa"
            CornerRadius="10">
            <ListBox
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding Items}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:AgentWorkflowProgressViewModel}">
                        <TextBlock
                            MinHeight="32"
                            Padding="4,6,4,6"
                            FontSize="15"
                            Text="{Binding Text}"
                            TextWrapping="Wrap" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
