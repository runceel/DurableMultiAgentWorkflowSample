<Window x:Class="DurableMultiAgentWorkflowSample.WindowsClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DurableMultiAgentWorkflowSample.WindowsClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Welcome to the Durable Multi-Agent Workflow Sample!" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Margin="0,30,0,20" FontSize="24" Grid.Row="0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Start Workflow" Width="200" Height="50" Command="{Binding StartWorkflowCommand}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30">
            <TextBox Name="InputTextBox" Width="300" Height="30" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
